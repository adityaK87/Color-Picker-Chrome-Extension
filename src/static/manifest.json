{
    "manifest_version": 3,
    "name": "chrome-extension",
    "version": "1.0.0",
    "description": "This Project is about developing a chrome extension",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_title": "chrome-extension",
        "default_popup": "popup.html"
    },
    "permissions": [
        "bookmarks",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.google.com/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "options_page": "options.html"
}